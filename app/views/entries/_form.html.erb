<% if @entry.errors.count > 0 %>
  <ul>
    <% @entry.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @entry do |f| %>
  <p>
    <%= f.label :author %>:
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :photo_url %>:
    <%= f.text_field :photo_url %>
  </p>

  <p>
    <%= f.label :date_taken %>:
    <%= f.text_field :date_taken %>
  </p>

  <%= f.submit %>
<% end %>
